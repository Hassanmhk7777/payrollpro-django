// Initialize application
document.addEventListener('DOMContentLoaded', function() {
    console.log('PayrollPro SPA initialized');
    
    // Check for section parameter in URL
    const urlParams = new URLSearchParams(window.location.search);
    const sectionParam = urlParams.get('section');
    
    if (sectionParam) {
        console.log('Loading section from URL parameter:', sectionParam);
        // Wait for everything to load then switch to the section
        setTimeout(() => {
            const targetTab = document.getElementById(sectionParam + '-tab');
            if (targetTab) {
                // Activate the tab
                const tabInstance = new bootstrap.Tab(targetTab);
                tabInstance.show();
                
                // Load the section content
                loadSection(sectionParam);
            }
        }, 300);
    }
    
    // Check if there's a hash in the URL and switch to that tab
    const hash = window.location.hash.substring(1); // Remove the #
    if (hash && !sectionParam) {
        // Delay to ensure DOM is fully loaded
        setTimeout(() => {
            const targetTab = document.getElementById(hash + '-tab');
            if (targetTab) {
                const tab = new bootstrap.Tab(targetTab);
                tab.show();
                loadSection(hash);
            }
        }, 100);
    } else {
        // Load default dashboard content
        setTimeout(() => {
            loadSection('dashboard');
        }, 100);
    }
});

// Function to switch tabs and load content
function switchToTab(tabName) {
    // Update active tab
    document.querySelectorAll('.nav-link').forEach(tab => {
        tab.classList.remove('active');
    });
    document.getElementById(tabName + '-tab').classList.add('active');
    
    // Load the section
    loadSection(tabName);
}

