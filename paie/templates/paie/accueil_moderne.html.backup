<script>
// Application SPA Management
let currentSection = 'dashboard';
let loadedSections = ['dashboard']; // Dashboard is loaded by default

function loadSection(sectionName) {
    // Hide all sections
    document.querySelectorAll('.section-content').forEach(section => {
        section.classList.remove('active');
    });
    
    // Show target section
    const targetSection = document.getElementById(sectionName);
    targetSection.classList.add('active');
    
    // Update current section
    currentSection = sectionName;
    
    // Load content if not already loaded
    if (!loadedSections.includes(sectionName)) {
        loadSectionContent(sectionName);
    }
}

// Rendre les fonctions accessibles globalement pour la sidebar
window.loadSection = loadSection;
window.loadSectionContent = loadSectionContent;
window.switchToTab = switchToTab;

function loadSectionContent(sectionName) {
    const section = document.getElementById(sectionName);
    const loading = section.querySelector('.loading');
    
    // Show loading
    if (loading) {
        loading.style.display = 'block';
    }
    
    // API endpoints mapping
    const apiEndpoints = {
        'dashboard-rh': '/api/spa/dashboard/',
        'employees': '/api/spa/employees/',
        'absences': '/api/spa/absences/',
        'payroll': '/api/spa/payroll/',
        'reports': '/api/spa/reports/'
    };
    
    const endpoint = apiEndpoints[sectionName];
    if (!endpoint) {
        console.error('No API endpoint found for section:', sectionName);
        return;
    }
    
    // Make AJAX request to load real content
    fetch(endpoint, {
        method: 'GET',
        headers: {
            'X-Requested-With': 'XMLHttpRequest',
            'Content-Type': 'application/json',
        },
        credentials: 'same-origin'
    })
    .then(response => response.json())
    .then(data => {
        if (loading) {
            loading.style.display = 'none';
        }
        
        if (data.success) {
            // Replace section content with real data
            section.innerHTML = data.content;
            
            // Apply animations to new content
            section.querySelectorAll('.slide-in-up').forEach((el, index) => {
                el.style.animationDelay = `${index * 0.1}s`;
            });
            
            PayrollPro.notify(`Section "${getSectionDisplayName(sectionName)}" charg√©e avec succ√®s`, 'success');
        } else {
            section.innerHTML = `
                <div class="alert alert-danger">
                    <h4>Erreur de chargement</h4>
                    <p>Impossible de charger le contenu: ${data.error || 'Erreur inconnue'}</p>
                    <button class="btn btn-primary" onclick="loadSectionContent('${sectionName}')">
                        <i class="fas fa-redo me-2"></i>R√©essayer
                    </button>
                </div>
            `;
            PayrollPro.notify(`Erreur lors du chargement de "${getSectionDisplayName(sectionName)}"`, 'error');
        }
        
        // Mark as loaded
        if (!loadedSections.includes(sectionName)) {
            loadedSections.push(sectionName);
        }
    })
    .catch(error => {
        console.error('Error loading section content:', error);
        if (loading) {
            loading.style.display = 'none';
        }
        
        // Don't show error, just notify that enhanced content is available
        PayrollPro.notify(`Contenu statique affich√© pour "${getSectionDisplayName(sectionName)}". Connectez-vous pour voir les donn√©es en temps r√©el.`, 'info');
        
        // Mark as loaded anyway to prevent retry loops
        if (!loadedSections.includes(sectionName)) {
            loadedSections.push(sectionName);
        }
    });
}

function getSectionDisplayName(sectionName) {
    const names = {
        'dashboard-rh': 'Dashboard Admin',
        'employees': 'Gestion Employ√©s',
        'absences': 'Gestion Absences',
        'payroll': 'Calcul Paie',
        'reports': 'Rapports & Exports'
    };
    return names[sectionName] || sectionName;
}

// Initialize SPA on page load
document.addEventListener('DOMContentLoaded', function() {
    console.log('PayrollPro SPA initialized');
    
    // Setup tab navigation
    document.querySelectorAll('#mainTabs button[data-bs-toggle="tab"]').forEach(tab => {
        tab.addEventListener('click', function(e) {
            const targetId = this.getAttribute('data-bs-target')?.replace('#', '');
            if (targetId && targetId !== 'dashboard') {
                setTimeout(() => {
                    loadSection(targetId);
                }, 100);
            }
        });
    });
    
    // Setup sidebar navigation (if exists)
    document.querySelectorAll('.sidebar-link').forEach(link => {
        link.addEventListener('click', function(e) {
            e.preventDefault();
            const sectionName = this.getAttribute('data-section');
            if (sectionName) {
                loadSection(sectionName);
                
                // Update active state in sidebar
                document.querySelectorAll('.sidebar-link').forEach(l => l.classList.remove('active'));
                this.classList.add('active');
            }
        });
    });
    
    // Initialize PayrollPro system
    if (typeof PayrollPro !== 'undefined') {
        PayrollPro.notify('Application PayrollPro initialis√©e avec succ√®s', 'success');
    }
    
    console.log('SPA initialization complete');
}); 
