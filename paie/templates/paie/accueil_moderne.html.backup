    <!-- Content Area -->
    <div class="content-area">
        <div class="tab-content" id="mainTabContent">
            
            <!-- DASHBOARD SECTION -->
            <div class="section-content active" id="dashboard">
                <!-- Professional Header -->
                <div class="admin-header-compact mb-4">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <div class="d-flex align-items-center">
                                <div class="admin-avatar-small me-3">
                                    <i class="fas fa-crown text-warning"></i>
                                </div>
                                <div>
                                    <h4 class="admin-name mb-1">{{ user.get_full_name|default:user.username }}</h4>
                                    <div class="admin-role-badge mb-2">
                                        <i class="fas fa-shield-alt me-1"></i>Administrateur
                                    </div>
                                    <p class="admin-info mb-0">
                                        <i class="fas fa-calendar-alt me-2"></i>{{ "now"|date:"l j F Y" }}
                                        <span class="mx-2">‚Ä¢</span>
                                        <i class="fas fa-clock me-2"></i>{{ "now"|date:"H:i" }}
                                        <span class="mx-2">‚Ä¢</span>
                                        <span class="badge bg-success ms-2">
                                            <i class="fas fa-shield-alt me-1"></i>Acc√®s Total
                                        </span>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 text-end">
